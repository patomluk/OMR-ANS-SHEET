<Window x:Class="AnswerSheetChecker.WindowMain"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AnswerSheetChecker"
        mc:Ignorable="d"
        Title="An Answer Scoring By Image Procressing" Height="720" Width="1080">
    <Grid>
        <Grid Background="#FF29ECFF" Height="72" VerticalAlignment="Top">
            <TextBlock x:Name="TextBlockNamePage" Margin="30,10,30,6" TextWrapping="Wrap" Text="ชื่อหัวข้อ" FontSize="48" FontFamily="TH Sarabun New" FontWeight="Bold"/>
        </Grid>
        <Grid x:Name="gridContent" Margin="0,72,0,32">
            <Grid.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF5E92EE" Offset="0.903"/>
                    <GradientStop Color="White" Offset="0.39"/>
                    <GradientStop Color="#FF5E92EE" Offset="0.977"/>
                </LinearGradientBrush>
            </Grid.Background>
        </Grid>
        <Grid x:Name="gridBotton" Background="#FF00FFF3" Height="32" VerticalAlignment="Bottom">
            
        </Grid>
        <Frame x:Name="FrameContent" Content="" Margin="0,72,0,0" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
